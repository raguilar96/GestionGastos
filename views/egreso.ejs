<div class="container my-3">
    <h1>EGRESOS MENSUALES</h1>

  <!--BOTON NUEVO-->
  <div Class="container my-3">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal-nuevo-egreso">
      Nuevo
    </button>
  </div>
    
    
  <div class="container my-3" >   
    
    <!--TABLA-->         
    <table  id="tabla-egresos" class="table table-striped table-ligth table-bordered table-hover">
        <thead>
          <tr>
            <th class="edicion">Nro.</th>
            <th>Tipo de Egreso</th>
            <th>Descripcion</th>
            <th>Cantidad ($)</th>
            <th>Fecha</th>
            <th>Acción</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% egreso.forEach(function(item) { %>
            <td><%= item.idEgreso %></td>
            <td><%= item.idTipoEgreso %></td>
            <td><%= item.descripcion %></td>
            <td><%= item.cantidad %></td>
            <td><%= item.fecha %></td>
            <td>
              <input type='image' src='/img/Editar.png' data-bs-toggle="modal" data-bs-target="#modal-editar-egreso" class ='img_boton' id = "<%= item.idEgreso %>" onclick = EditarEgreso(this); > 
              <input type='image' src='/img/Eliminar.png' data-bs-toggle="modal" data-bs-target="#modal-eliminar-egreso" class ='img_boton' id = "<%= item.idEgreso %>" onclick = BorrarEgreso(this); >
            </td>
          </tr>
          <% }); %>
        </tbody>
    </table>
  </div>
</div>



<!--MODAL EDITAR-->
<div class="modal fade" id="modal-editar-egreso" tabindex="-1" aria-hidden="true">
  <form id="editarEgreso"  action="/editarEgreso" method="post">
      <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header">
              <h5 class="modal-title">Editar Registro</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <%- include('Modales/modalEgreso'); -%>
              </div>
              <div class="modal-footer">
              <button type="submit" class="btn btn-success" data-bs-dismiss="modal">Guardar</button>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              </div>
          </div>
      </div>
  </form>
</div>


<!--MODAL NUEVO-->
<div class="modal fade" id="modal-nuevo-egreso" tabindex="-1" aria-hidden="true">
  <form id="nuevoegreso"  action="/registroEgreso" method="post">
      <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header">
              <h5 class="modal-title">Nuevo Registro</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <%- include('Modales/modalEgreso'); -%>
              </div>
              <div class="modal-footer">
              <button type="submit" class="btn btn-success" data-bs-dismiss="modal">Guardar</button>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              </div>
          </div>
      </div>
  </form>
</div>

<!-- MODAL ELIMINAR -->
<div class="modal fade" id="modal-eliminar-egreso" tabindex="-1" aria-hidden="true">
  <form action="/eliminarEgreso" method="post">
      <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header">
              <h5 class="modal-title">Eliminar Egreso</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">  
              <p >Esta a punto de eliminar un Egreso. ¿Desea de continuar?</p>


                  <div class="input-group mb-3">
                      <div class="input-group-prepend">
                          <span class="input-group-text" id="basic-addon1">Nro.:</span>
                      </div>
                      <input type="text" name="idEgreso" id="Id_borrar" class="form-control" placeholder="" aria-describedby="basic-addon1" readonly onmousedown="return false;">
                  </div>
                  
                  <div class="input-group mb-3">
                      <div class="input-group-prepend">
                          <span class="input-group-text" id="basic-addon1">Descripcion:</span>
                      </div>
                      <input type="text" name="idTipoEgreso" id="Nombre_borrar" class="form-control" placeholder="" aria-describedby="basic-addon1" readonly onmousedown="return false;">
                  </div>


              </div>
              <div class="modal-footer">
              <button type="submit" class="btn btn-danger" data-bs-dismiss="modal">Eliminar</button>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              </div>
          </div>
      </div>
  </form>
</div>