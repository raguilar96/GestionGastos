<div class="container my-3">
    <h1>TABLA DE INGRESOS MENSUALES</h1>

    <!---->
    <form  action="/registroIngreso" method="post">

    <div > 
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1">Nro.:</span>
        </div>
        <input type="text" name="idIngreso" id="idIngreso" class="form-control" placeholder="" aria-describedby="basic-addon1" readonly onmousedown="return false;">
      </div>
    
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1">Tipo de ingreso:</span>
        </div>
        <select type="text" name="idTipoIngreso" id="idTipoIngreso" class="form-select" placeholder="--- Seleccionar ---" aria-describedby="basic-addon1">
          <% tipoIngreso.forEach(function(item) { %>
          <option value=<%= item.idTipoIngreso %>><%= item.nombreTipoIngreso %></option>
          <% }); %>
        </select>
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1">Filial:</span>
        </div>
        <select type="text" name="idFilial" id="idFilial" class="form-select" placeholder="--- Seleccionar ---" aria-describedby="basic-addon1">
          <% filial.forEach(function(item) { %>
          <option value=<%= item.idFilial %>><%= item.idFilial %> - <%= item.nombreFilial %></option>
          <% }); %>
        </select>
      </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">Contribuyente:</span>
      </div>
      <select type="text" name="idContribuyente" id="idContribuyente" class="form-select" placeholder="--- Seleccionar ---" aria-describedby="basic-addon1">
        <% contribuyente.forEach(function(item) { %>
        <option value=<%= item.idContribuyente %> value=<%= item.idcontribuyente %>><%= item.nombre %>, <%= item.apellido %></option>
        <% }); %>
      </select>
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">Cantidad($):</span>
      </div>
      <input type="number" name="cantidad" id="cantidad" class="form-control" placeholder="0000,00" aria-describedby="basic-addon1">
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">Fecha:</span>
      </div>
      <input type="date" name="fecha" id="fecha" class="form-control" aria-describedby="basic-addon1">
    </div>

    
    <button type="submit" class="btn btn-success" data-bs-dismiss="modal">Guardar</button>
    </form>

    <!---->
    
    
    <div class="row mt-5" >              
          <table  id="tabla-tareas" class="table table-striped table-ligth table-bordered table-hover">
              <thead>
                <tr>
                  <th class="edicion">Nro.</th>
                  <th>Tipo de Ingreso</th>
                  <th>Filial</th>
                  <th>Contribuyente</th>
                  <th>Cantidad ($)</th>
                  <th>Fecha</th>
                  <th class="edicion">Acci√≥n</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <% ingreso.forEach(function(item) { %>
                  <td><%= item.idIngreso %></td>
                  <td><%= item.idTipoIngreso %></td>
                  <td><%= item.idFilial %></td>
                  <td><%= item.idContribuyente %></td>
                  <td><%= item.cantidad %></td>
                  <td><%= item.fecha %></td>
                  <td>
                    <input type='image' src='/img/Editar.png' data-bs-toggle="modal" data-bs-target="#modal-editar-tarea" class ='img_boton' id = ""  > 
                    <input type='image' src='/img/Eliminar.png' data-bs-toggle="modal" data-bs-target="#modal-eliminar-tarea" class ='img_boton' id = "" >
                  </td>
                </tr>
                <% }); %>
              </tbody>
          </table>
      </div>
    </div>
